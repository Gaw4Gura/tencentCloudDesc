.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #AAA;
}

.userinfo > button {
  background-color: #FDC21C;
  border: 0 transparent solid;
  color: #FFF;
  font-size: 16px;
  height: 32px;
  line-height: 32px;
}

.userinfo > .hint {
  margin-top: 10px;
}